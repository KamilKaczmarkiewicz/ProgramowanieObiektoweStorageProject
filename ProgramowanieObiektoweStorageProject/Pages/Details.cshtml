@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Item Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ItemVolume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemVolume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.ItemPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.ItemPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.LastModificationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.LastModificationDate)
        </dd>
        <dt class="col-sm-2">
            Price of all items
        </dt>
        <dd class="col-sm-10">
            @(Model.Item.ItemPrice * Model.Item.Quantity)
        </dd>
        <dt class="col-sm-2">
            All volume
        </dt>
        <dd class="col-sm-10">
            @(Model.Item.ItemVolume * Model.Item.Quantity)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Item.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
